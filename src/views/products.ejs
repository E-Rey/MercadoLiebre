<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<ul class="d-flex">
				<% categories.forEach(category => { %>
					<li class="mx-3 h2"><a href="/products/category/<%= category.id %>"><%= category.name %></a></li>
				<% }) %>
			</ul>
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
		
			<% products.forEach(({id,name,price,images,discount}) => { %>
				<%- include('./partials/product',{
					id,
					name,
					price,
					images,
					discount,
					toThousand
				})  %> 
			<% }) %>
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>