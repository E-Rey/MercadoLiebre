<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head',{
    title : 'Registrate'
  }) %>
  <body>
    <%- include('partials/headerNavbar') %>

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-6 mx-auto">
          <h2 class="products-title">Registrate</h2>
        </div>
          <div class="col-6 mx-auto">
                <form id="form-register" action="" method="POST" novalidate>

                  <div class="row product-detail">

                      <div class="col-12 col-md-6">
                        <label for="name" class="form-label">Nombre</label>
                        <input type="text"
                        class="form-input form-control <%= locals.errors && errors.name ? 'is-invalid' : null %> " 
                        value="<%= locals.old && old.name ? old.name : null %>"
                        id="name"  name="name" title="El nombre debe tener m치s de dos caracteres"/>
                        <p id="errorNombre" style="color:red" class="text-danger"><%= locals.errors && errors.name ? errors.name.msg : null %> </p>
                      </div>
                      <div class="col-12 col-md-6">
                        <label for="surname" class="form-label">Apellido</label>
                        <input type="text"
                        value="<%= locals.old && old.surname ? old.surname : null %>"
                        class="form-input form-control <%= locals.errors && errors.surname ? 'is-invalid' : null %>"
                        id="surname" name="surname" title="El apellido debe tener m치s de dos caracteres"/>
                        <p id="errorApellido" style="color:red" class="text-danger"><%= locals.errors && errors.surname ? errors.surname.msg : null %></p>
                      </div>
                      <div class="col-12">
                        <label for="email" class="form-label">Email</label>
                        <input type="email"
                        value="<%= locals.old && old.email ? old.email : null %>"
                        class="form-input form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>"
                        id="email" name="email"/>
                        <p id="errorEmail" style="color:red" class="text-danger"><%= locals.errors && errors.email ? errors.email.msg : null %></p>
                      </div>
                    <div class="col-12 col-md-6">
                        <label for="pass" class="form-label">Contrase침a</label>
                        <input type="password"
                        class="form-input form-control <%= locals.errors && errors.pass ? 'is-invalid' : null %>" name="pass" id="pass"/>
                        <p id="errorPass" style="color:red" class="text-danger"><%= locals.errors && errors.pass ? errors.pass.msg : null %></p>
                      </div>

                      <div class="col-12 col-md-6">
                        <label for="pass2" class="form-label">Reingresar contrase침a</label>
                        <input type="password"
                        class="form-input form-control <%= locals.errors && errors.pass2 ? 'is-invalid' : null %>"
                        id="pass2" name="pass2"/>
                        <p id="errorPass2"  style="color:red"class= "text-danger"><%= locals.errors && errors.pass2 ? errors.pass2.msg : null %></p>

                      </div>
                      <div class="col-12 col-md-6 d-flex justify-content-center">
                     
                        <div class="form-check d-flex align-items-center">
                          <input name="terms" class="form-check-input <%= locals.errors && errors.bases ? 'is-invalid' : null %>" type="checkbox" value="1" id="terms" style="width:30px; height:30px;">
                          <label class="form-check-label ms-2" for="terms">
                            Acepto las bases y condiciones
                          </label>
                          <p id="terms"  style="color:red"class= "text-danger"><%= locals.errors && errors.terms ? errors.terms.msg : null %></p>

                        </div>

                      

                        </div>
                       
                        <div class="col-12 col-md-6 mt-4">

                          <button type="submit" class="buy-now-button">
                            Registrarse
                          </button>
                          <p id="errorTerms"  style="color:red"class= "text-danger mt-4"><%= locals.errors && errors.bases ? errors.bases.msg : null %></p>
                          <p id="msgError" style="color:red" class="text-danger"></p>

                         
                        </div>

                    </div>
                    
                      </div>
                      

                      </div>

                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="/js/register.js"></script>
  </body>
</html>
